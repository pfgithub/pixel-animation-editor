{
	"compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
		"outDir": "./built",
		"target": "es2017",
		"module": "commonjs",
        "noImplicitAny": true,
		"lib": ["es2017"],
		"resolveJsonModule": true,
		"declaration": true,
		"strict": true
	},
	"include": [
		"src/**/*",
		"bin/**/*",
		"test/**/*",
		"index.ts"
	]
}